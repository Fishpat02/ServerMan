{
  "exports": "./src/bot.ts",
  "fmt": {
    "lineWidth": 80,
    "semiColons": false,
    "singleQuote": true,
    "useTabs": false
  },
  "imports": {
    "@types/node": "npm:@types/node@^22.9.0",
    "discord.js": "npm:discord.js@^14.16.3"
  },
  "lint": {
    "rules": {
      "include": [
        "no-explicit-any",
        "no-irregular-whitespace",
        "prefer-const"
      ]
    }
  },
  "name": "@fishpat02/serverman",
  "tasks": {
    "deploy": "deno run ./src/scripts/deploy-commands.ts",
    "dev": "deno run --watch --env-file ./src/bot.ts",
    "purge": "deno run ./src/scripts/purge-commands.ts"
  },
  "version": "2.0.0"
}
